{
    "id": "authorities",
    "endpoint": {
        "url": "https://ldf.fi/coinsampo/sparql",
        "useAuth": true,
        "prefixesFile": "SparqlQueriesPrefixes.js"
    },
    "sparqlQueriesFile": "SparqlQueriesAuthorities.js",
    "baseURI": "http://ldf.fi/coinsampo",
    "URITemplate": "<BASE_URI>/authorities/<LOCAL_ID>",
    "facetClass": "coin-schema:Authority",
    "frontPageImage": "main_page/kristiina.png",
    "searchMode": "faceted-search",
    "defaultActiveFacets": [
        "prefLabel"
    ],
    "defaultTab": "table",
    "defaultInstancePageTab": "table",
    "resultClasses": {
        "authorities": {
            "paginatedResultsConfig": {
                "tabID": 0,
                "component": "ResultTable",
                "tabPath": "table",
                "tabIcon": "CalendarViewDay",
                "propertiesQueryBlock": "authorityPropertiesFacetResults",
                "pagesize": 20,
                "sortBy": null,
                "sortDirection": "asc"
            },
            "instanceConfig": {
                "propertiesQueryBlock": "authorityPropertiesInstancePage",
                "instancePageResultClasses": {
                    "instancePageTable": {
                        "tabID": 0,
                        "component": "InstancePageTable",
                        "tabPath": "table",
                        "tabIcon": "CalendarViewDay"
                    }
                }
            }           
        },
        "findsKnowledgeGraphMetadata": {
            "sparqlQuery": "knowledgeGraphMetadataQuery",
            "resultMapper": "makeObjectList"
        }
    },
    "maps": {
        "mintsPlaces": {
            "center": [
                65.184809,
                27.314050
            ],
            "zoom": 5
        },
        "findsPlacesHeatmap": {
            "center": [
                65.184809,
                27.314050
            ],
            "zoom": 4
        },
        "findInstancePageMap": {
            "center": [
                65.184809,
                27.314050
            ],
            "zoom": 5
        },
        "findInstancePageNearbyFinds": {
            "center": [
                65.184809,
                27.314050
            ],
            "zoom": 5
        }
    },
    "properties": [
        {
            "id": "image",
            "valueType": "image",
            "previewImageHeight": 160,
            "makeLink": true,
            "externalLink": true,
            "sortValues": false,
            "numberedList": false,
            "hideHeader": false
        },
        {
            "id": "prefLabel",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 140
        },
        {
            "id": "wikidata",
            "valueType": "object",
            "makeLink": true,
            "externalLink": true,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 140,
            "onlyOnInstancePage": true
        },
        {
            "id": "description",
            "valueType": "string",
            "makeLink": false,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 180
        },
        {
            "id": "material",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 180
        },
        {
            "id": "denomination",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 130
        },
        {
            "id": "period",
            "valueType": "object",
            "makeLink": true,
            "externalLink": false,
            "sortValues": true,
            "numberedList": false,
            "minWidth": 130
        }
    ],
    "facets": {
        "denomination": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "^coin-schema:authority/coin-schema:denomination",
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "^coin-schema:authority/coin-schema:denomination/skos:prefLabel",
            "sortDirection": "desc",
            "pieChartButton": true
        },
        "period": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "^coin-schema:authority/coin-schema:period",
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "^coin-schema:authority/coin-schema:period/skos:prefLabel",
            "sortDirection": "desc",
            "pieChartButton": true
        },
        "material": {
            "containerClass": "ten",
            "facetType": "list",
            "filterType": "uriFilter",
            "predicate": "^coin-schema:authority/coin-schema:material",
            "searchField": true,
            "sortButton": true,
            "sortBy": "instanceCount",
            "sortByPredicate": "^coin-schema:authority/coin-schema:material/skos:prefLabel",
            "sortDirection": "desc",
            "pieChartButton": true
        }
    }
}